{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types":["node","jest"],
    "lib": [
      "es6",
      "es2017.object",
      "dom", "es2016", "es2017"
    ]
  },
  "include": [
    "./src/**/*", "../mocoolka-react/mocoolka-components/src/reactHelper.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}